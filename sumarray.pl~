use strict;
my @A;
my @B;
my $r;
my $c;
my @sum;
print "enter row size of matrix \n";
$r=<STDIN>;
print "enter column size of matrix \n";
$c=<STDIN>;
print "enter elements of matrix A\n";
for(my $i=0;$i<$r;$i++)
{
for(my $j=0;$j<$c;$j++)
{
$A[$i][$j]=<STDIN>;
}
}
print "enter elements of matrix B\n";
for(my $i=0;$i<$r;$i++)
{
for(my $j=0;$j<$c;$j++)
{
$B[$i][$j]=<STDIN>;
}
}
print "sum of matrix is\n";
for(my $i=0;$i<$r;$i++)
{
for(my $j=0;$j<$c;$j++)
{
 $sum[$i][$j]=$A[$i][$j]+$B[$i][$j];

}
}
for(my $i=0;$i<$r;$i++)
{
for(my $j=0;$j<$c;$j++)
{
print "\t$sum[$i][$j]";
}
print "\n";
}


